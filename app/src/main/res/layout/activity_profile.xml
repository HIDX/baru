<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_qrcode"
        tools:context=".ProfileActivity">

    <Toolbar
            android:id="@+id/toolbar_qrcode"
            android:background="@color/background_screen_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/img_profil_back"
                android:src="@drawable/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textSize="23sp"
                android:text="Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </Toolbar>

    <LinearLayout
            android:gravity="center"
            android:layout_below="@+id/toolbar_qrcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_qrcode"
            android:layout_margin="16dp">



        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ayy"
                android:layout_marginTop="16dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="HID"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="CEO"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="hid@gmail.com"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="00821921"/>
        <!-- button session history !-->
        <LinearLayout
                android:id="@+id/ll_session_history"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Session History"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
                android:layout_marginTop="5dp"
                android:background="@color/grayy"
                android:layout_width="180dp"
                android:layout_height="1dp">

        </View>
        <!-- button Edit Profile !-->
        <LinearLayout
                android:id="@+id/ll_edit_profil"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Edit Profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="80dp"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
                android:layout_marginTop="5dp"
                android:background="@color/grayy"
                android:layout_width="180dp"
                android:layout_height="1dp">

        </View>
        <!-- button Change Password !-->
        <LinearLayout
                android:id="@+id/ll_change_password"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Change Password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="33dp"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
                android:layout_marginTop="5dp"
                android:background="@color/grayy"
                android:layout_width="180dp"
                android:layout_height="1dp">

        </View>

        <Button
                android:id="@+id/btn_logout_user"
                android:textColor="@color/white"
                android:background="@drawable/rounded_logout"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="Logout"
                android:layout_width="150dp"
                android:layout_height="30dp"/>

    </LinearLayout>

</RelativeLayout>