<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grayy"
        tools:context=".EditActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <Toolbar
                android:id="@+id/toolbar_qrcode"
                android:background="@color/background_screen_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/img_edit_profil"
                    android:src="@drawable/ic_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textSize="23sp"
                    android:text="Survey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </Toolbar>


        <LinearLayout
                android:paddingLeft="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/toolbar_qrcode"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_qrcode">


            <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Phone Number"/>
            <Button
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/back_edit_prof"
                    android:hint="phone number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/back_edit_prof"
                    android:hint="phone number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/back_edit_prof"
                    android:hint="phone number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/back_edit_prof"
                    android:hint="phone number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            <Button
                    android:id="@+id/btn_survey"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/ronded_button"
                    android:text="Sign in"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="20dp"
            />


            </LinearLayout>





    </RelativeLayout>
</ScrollView>